{
  "name": "vega-builder",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/vega-builder/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/vega-builder",
        "main": "packages/vega-builder/src/index.ts",
        "tsConfig": "packages/vega-builder/tsconfig.lib.json",
        "assets": ["packages/vega-builder/*.md"]
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/vega-builder/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/vega-builder/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "package": {
      "executor": "@nrwl/web:rollup",
      "outputs": ["{options.outputPath}"],
      "options": {
        "project": "packages/vega-builder/package.json",
        "outputPath": "dist/packages/@vis-talk/vega-builder",
        "entryFile": "packages/vega-builder/src/index.ts",
        "tsConfig": "packages/vega-builder/tsconfig.lib.json",
        "compiler": "babel",
        "umdName": "vistalk-vega-builder",
        "external": ["typescript"],
        "format": ["esm", "umd"],
        "rollupConfig": "packages/vega-builder/rollup.config.js"
      }
    }
  },
  "tags": []
}
